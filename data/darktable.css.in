/* buttons in plugins */
#lib-plugin-ui * button,
#iop-plugin-ui * button,
button
{
  border: 0.5pt solid @border-color;
  border-radius: 2pt;
  box-shadow:none;
  outline-width:0;
  border-image:none;
  padding:2pt;
  margin:0;
  background-color: shade(@selected_bg_color, 1.3);
  background-image: none;
  min-height: 5pt;
  min-width: 5pt;
}


